<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal"
    android:contentDescription="@string/app_name"
    tools:context="com.example.kalo0osha.dartscalc.MainActivity">

    <ImageButton
        android:id="@+id/twoplayers_btn"
        android:layout_width="128dp"
        android:layout_height="128dp"

        android:layout_marginStart="13dp"
        android:layout_marginTop="116dp"
        android:contentDescription=""
        android:elevation="0dp"
        app:srcCompat="@drawable/twoplayers"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/threeplayers_btn"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/treeplayers"
        android:layout_alignTop="@+id/twoplayers_btn"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/fourplayers_btn"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@+id/threeplayers_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        app:srcCompat="@drawable/fourplayers" />
</RelativeLayout>
